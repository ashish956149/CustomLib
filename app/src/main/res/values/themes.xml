<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CustomView" parent="Theme.AppCompat">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="tmButtonAppearance">@style/elevatedFlat_blueButton</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="elevatedFlat_blueButton">
        <item name="tmStartColor">#FF426bb6</item>
        <item name="tmButtonEndColor">#FF26458c</item>
        <item name="tmButtonBorder1StartColor">#FF5679c4</item>
        <item name="tmButtonBorder1EndColor">#FF1b2d5b</item>
        <item name="tmButtonBorder2StartColor">#FF366BD1</item>
        <item name="tmButtonBorder2EndColor">#FF18263E</item>
        <item name="tmButtonPressedDarkShadowColor">#80000000</item>
    </style>

</resources>